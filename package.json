{
  "name": "esnobuild",
  "version": "0.0.1",
  "description": "Write es modules on modern browser and run without bundle.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:loaders & npm run build:core",
    "": "esbuild loaders/index.js --bundle --outfile=dist/loaders.js --minify",
    "build:loaders": "esbuild loaders/index.js --bundle --outfile=dist/loaders.js",
    "build:core": "esbuild index.js --bundle --outfile=dist/core.js",
    "prepublishOnly": "npm run build && npm run test",
    "test": "jest",
    "start:prebuildServer": "node server/index.mjs"
  },
  "author": "Johnathon Yao",
  "license": "MIT",
  "devDependencies": {
    "@babel/standalone": "^7.17.6",
    "@types/jest": "^27.4.1",
    "@types/puppeteer": "^5.4.5",
    "esbuild": "^0.14.24",
    "eslint": "^8.10.0",
    "eslint-config-sprite": "^1.0.6",
    "jest": "^27.5.1",
    "jest-puppeteer": "^6.1.0",
    "puppeteer": "^13.5.2"
  },
  "dependencies": {
    "@rollup/plugin-typescript": "^11.1.1",
    "npm-package-arg": "^10.1.0",
    "rollup": "^3.23.1",
    "yarn": "^1.22.19"
  }
}
